<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView android:id="@+id/icon"
        android:layout_height="40dp" android:layout_width="40dp" />

    <TextView android:id="@+id/title"
        android:layout_height="wrap_content" android:layout_width="340dp"
        android:layout_weight="3"
        android:textSize="18dp" android:textColor="@color/light_grey"
        android:paddingTop="15dp" android:paddingBottom="15dp" android:paddingLeft="11dp" />

</LinearLayout>