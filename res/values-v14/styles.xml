<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
    </style>
    
    <style name="SettingsTheme" parent="android:Theme.Holo">

    </style>
    
    <style name="CardTheme" parent="android:Theme.Holo.Light.NoActionBar">
        
    </style>

    <style name="HangoutsTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/HangoutsTheme.ActionBarStyle</item>
    </style>

    <style name="HangoutsThemeDialog" parent="@android:Theme.Holo.Light">
        <item name="messageBarContainerStyle">@style/MessageBar.Container</item>
        <item name="messageBarTextStyle">@style/MessageBar.Message</item>
        <item name="messageBarButtonStyle">@style/MessageBar.Button</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppBaseThemeDialog" parent="android:Theme.Holo">
        <item name="messageBarContainerStyle">@style/MessageBar.Container</item>
        <item name="messageBarTextStyle">@style/MessageBar.Message</item>
        <item name="messageBarButtonStyle">@style/MessageBar.Button</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="HangoutsTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/HangoutsTheme.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/HangoutsTheme.ActionBar.SubtitleTextStyle</item>
    </style>

    <style name="HangoutsTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/hangouts_title</item>
    </style>

    <style name="HangoutsTheme.ActionBar.SubtitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/hangouts_subtitle</item>
    </style>

</resources>